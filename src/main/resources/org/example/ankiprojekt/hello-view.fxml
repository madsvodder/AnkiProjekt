<BorderPane fx:id="borderPane_Main" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ankiprojekt.HelloController">
   <center>
      <VBox alignment="TOP_CENTER" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
          <Label fx:id="welcomeText" />
         <TableView fx:id="tbview_decks" prefHeight="395.0" prefWidth="1240.0" />
         <TitledPane animated="false" text="Statistikker">
           <content>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                     <Label fx:id="label_cardsLearned" text="Label">
                        <font>
                           <Font size="18.0" />
                        </font>
                     </Label>
                  </children>
               </AnchorPane>
           </content>
         </TitledPane>
         <Region prefHeight="252.0" prefWidth="1240.0" visible="false" />
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
            <children>
               <Button mnemonicParsing="false" onAction="#importAnkiDeck" text="Import Deck" />
               <Button onAction="#createNewDeck" text="Opret Deck" />
               <Button layoutX="645.0" layoutY="20.0" onAction="#createNewCard" text="Opret nyt kort" />
               <Button layoutX="689.0" layoutY="10.0" onAction="#editUserCards" text="Rediger kort" />
            </children>
         </HBox>
      </VBox>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#save" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#load" text="Load" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
